{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/public/index.html"
      },
      {
        "source": "/index.html",
        "destination": "/public/index.html"
      },
      {
        "source": "/login.html",
        "destination": "/public/login.html"
      },
      {
        "source": "/landing.html",
        "destination": "/public/landing.html"
      },
      {
        "source": "/dashboard.html",
        "destination": "/public/dashboard.html"
      },
      {
        "source": "/handover.html",
        "destination": "/public/handover.html"
      },
      {
        "source": "/ai_assistant.html",
        "destination": "/public/ai_assistant.html"
      },
      {
        "source": "/monitor.html",
        "destination": "/public/monitor.html"
      },
      {
        "source": "/antibiotic_guide.html",
        "destination": "/public/antibiotic_guide.html"
      },
      {
        "source": "/oncall_assistant.html",
        "destination": "/public/oncall_assistant.html"
      },
      {
        "source": "**",
        "destination": "/public/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}
